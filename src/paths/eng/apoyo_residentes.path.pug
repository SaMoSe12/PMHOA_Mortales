#home.apoyo-residentes 

section#apoyo-residentes 
    .container
        h1.titulo CUSTOMER SUPPORT
        p.subtitulo Welcome! 
        p Please fill the form below and we'll contact you soon.

        form.mt-4.mb-4
            .field.is-horizontal
                .field-label.is-normal
                    label(for="tema").title.is-4  About: 
                .field-body 
                    .field 
                        .control 
                            .select.is-fullwidth 
                                select#tema(name="tema")
                                    option Please pick one.  
                                    option(value="1") Administration 
                                    option(value="2") Customers
                                    option(value="3") Resorts, Homes y Villas
                                    option(value="4") General Information
            
            .field.is-horizontal
                .field-label.is-normal
                    label(for="asunto").title.is-4  Subject: 
                .field-body 
                    .field 
                        .control 
                            input.input#asunto(type="text", name="asunto")
            
            .field.is-horizontal
                .field-label.is-normal
                    label(for="condominio").title.is-4  Condo: 
                .field-body 
                    .field 
                        .control 
                            .select.is-fullwidth 
                                select.required#condominio(name="condominio", required="true")
